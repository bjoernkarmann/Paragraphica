void updateHeader(bool wifiStatus, float lat, float lng, int page, bool sdStatus) {
  // Clear the header area first

  // draw header background bar, if all connections are good turn the bar green.
  if(wifiStatus && lat != 0 && sdStatus){
    tft.fillRect(0, 0, tft.width(), HEADER_HEIGHT, TFT_GRAY);
    cameraReady = true;
  }else{
    tft.fillRect(0, 0, tft.width(), HEADER_HEIGHT, TFT_RED);
    cameraReady = false;
  }
  

  // Set the size for the header text
  tft.setTextSize(TEXT_SIZE);
  tft.setTextColor(TFT_WHITE);

  // Display WiFi status on the top left
  tft.setCursor(MARGIN, MARGIN);
  if (wifiStatus) {
    tft.print("WiFi: Connected");
  } else {
    tft.print("WiFi: Disconnected");
  }

  // Display lat and lon below WiFi status
  tft.setCursor(MARGIN, MARGIN + TEXT_SIZE * 10);  // Adjust y-coordinate based on text size
  if (lat == 0) {
    tft.print("GPS: Searching...");
  } else {
    tft.print("Lat: " + String(lat, 6) + " Lng: " + String(lng, 6));
  }

  // Display page number on the top right
  String pageStr = "Mode: " + String(page) + "/3";

  int pageStrWidth = pageStr.length() * 6 * TEXT_SIZE;  // Approximate width calculation based on 6px width for each char
  tft.setCursor(MARGIN + tft.width() - pageStrWidth, MARGIN);  // Position x-coordinate to align text to right
  tft.print(pageStr);

  // Display SD card status below page number
  if (!sdStatus) {
    String sdStr = "No Micro SD";
    int sdStrWidth = sdStr.length() * 6 * TEXT_SIZE;  // Approximate width calculation based on 6px width for each char
    tft.setCursor(MARGIN + tft.width() - sdStrWidth, MARGIN + TEXT_SIZE * 10); // Position right below the page number
    tft.print(sdStr);
  }


}

void displayQRCode(const uint8_t *qrCode, int x, int y, int scale) {
  int totalPixels = sizeof(qrCode) * 8;  // Total number of pixels in the QR code
  int width = sqrt(totalPixels);         // Width of the QR code
  int height = width;                    // Height of the QR code (same as width since it's square)

  for (int j = 0; j < height; j++) {
    for (int i = 0; i < width; i++) {
      uint8_t byteValue = pgm_read_byte_near(qrCode + (j * width + i) / 8);
      uint8_t bitValue = (byteValue >> (7 - (i % 8))) & 0x01;

      int color = bitValue ? ILI9341_WHITE : ILI9341_BLACK;
      tft.fillRect(x + i * scale, y + j * scale, scale, scale, color);
    }
  }
}

